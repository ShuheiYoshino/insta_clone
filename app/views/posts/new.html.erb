<% provide(:title, "新規投稿") %>

<h1>あたらしく投稿する</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-4 post-form form-group">
    <%= form_for @post do |f| %>
      <div class="field">
        <%= f.text_area :content, placeholder: "どんな写真？", class: "form-control" %>
      </div>
      <div class="picture-selecter">
        <span class="picture">
          <%= f.file_field :pictures, multiple: true %>
        </span>
      </div>
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% if current_user.image %>
  <%= link_to image_tag(current_user.image, size: 50), current_user %>
<% else %>
  <%= link_to image_tag(current_user.gravatar_url(:size => 50)), current_user %>
<% end %>
<h1><%= current_user.user_name %></h1>
<span><%= link_to "マイページ", current_user %></span>
<span><%= "#{current_user.posts.count}ポスト" %></span>
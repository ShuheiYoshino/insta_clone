<% if notification.like_user_id? %>
  <%= avatar(find_user(notification.like_user_id), 50) %>
  <%= "#{find_user(notification.like_user_id).full_name}さんがあなたの投稿をお気に入りに追加しました" %>
<% elsif notification.comment_user_id? %>
  <%= avatar(find_user(notification.comment_user_id), 50) %>
  <%= "#{find_user(notification.comment_user_id).full_name}さんがあなたの投稿にコメントしました" %>
<% else %>
  <p>新着通知はありません</p>
<% end %>
<%= "#{time_ago_in_words(notification.created_at)}前"%>
<%= image_tag find_post(notification.post_id).pictures[0].thumb_mini.url %><br />
<% provide(:title, "パスワード変更")%>

<div class="edit-form col-md-8 col-md-offset-4">
  <h2>パスワードの変更</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row">
      <label class="col-md-3 col-form-label">新しいパスワード</label>
      <div class="field col-md-9">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <label class="col-md-3 col-form-label">新しいパスワード（再入力）</label>
      <div class="field col-md-9">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを設定する", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <%= button_to "退会する", registration_path(resource_name), class: "btn btn-outline-danger", data: { confirm: "本当に退会しますか？" }, method: :delete %>

  <%= link_to "戻る", :back %>
</div>
<% provide(:title, "マイページ") %>
<div class="row">
  <div class="col-md-2">
    <%= render 'shared/dashboard' %>
    <%= render 'shared/follow_form' %>
    <% if @user == current_user %>
      <%= link_to "編集", edit_user_registration_path %>
    <% end %>
  </div>
  <div class="posts col-md-10 col-md-offset-4">
    <% @posts.each do |post| %>
      <div class="slider">
        <%= link_to post.title, post_path(post) %>
        <div class="bxslider-mini">
          <% post.pictures.each do |picture| %>
            <%= image_tag picture.thumb.url %>
          <% end %>
        </div>
        <%= post.content %>
        <div class="like-form">
          <%= render 'shared/like_form', { post: post, like: @like } %>
        </div>
        <div class="comment-form">
          <%= render 'shared/comment_form', { post: post, comment: @comment }%>
        </div>
      </div>
    <% end %>
  </div>
</div>